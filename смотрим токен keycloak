echo 'ТВОЙ_РАБОЧИЙ_ТОКЕН' | cut -d'.' -f2 | tr '_-' '/+' | base64 -d 2>/dev/null
curl -k -sS --max-redirs 0 -D - \
  -H "Authorization: Bearer $ACCESS_TOKEN" \
  -H "X-Requested-With: XMLHttpRequest" \
  -H "Accept: application/json" \
  "https://nifi.example.com/nifi-api/flow/current-user" \
  -o /dev/null
